<nav aria-label="Page navigation" >
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage == 0)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-action="show" asp-controller="NewsList" asp-route-pageCount="@(Model.CurrentPage - 1)">
                    <span>&#60;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="show" asp-controller="NewsList" asp-route-pageCount="@(Model.CurrentPage - 1)">
                    <span>&#60;</span>
                </a>
            </li>
        }

        @for (int i = 0; i <= Model.PageCount; i++)
        {
            if (i == Model.CurrentPage)
            {
                <li class="page-item active">
                    <a class="page-link" asp-controller="NewsList" asp-action="show" asp-route-pageCount="@i">@(i + 1)</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="NewsList" asp-action="show" asp-route-pageCount="@i">@i</a>
                </li>
            }
        }
        @if (Model.Articles.Count == 0)
        {
            <li class="page-item disabled">
                <a class="page-link" asp-action="show" asp-controller="NewsList" asp-route-pageCount="@(Model.CurrentPage + 1)">
                    <span>&#62;</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="show" asp-controller="NewsList" asp-route-pageCount="@(Model.CurrentPage + 1)">
                    <span>&#62;</span>
                </a>
            </li>
        }
    </ul>
</nav>