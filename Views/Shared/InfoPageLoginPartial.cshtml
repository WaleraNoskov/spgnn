@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if(SignInManager.IsSignedIn(User)) {
    <div class="card shadow-1-strong mb-3">
        <div class="card-body">
            <div class="card-title mb-3">
                <h5>Действия</h5>
            </div>
            <a class="btn btn-secondary btn-rounded shadow-1-strong mb-3" asp-controller="InfoArticles" asp-action="addoredit" asp-route-id="@Model.CurrentArticle.Id" asp-route-needEdit="@true">
                <i class="fas fa-pen me-2"></i>Редактировать
            </a>
            <a class="btn btn-danger btn-rounded shadow-1-strong" onclick="return confirm('Вы точно хотите удалить эту запись?')" asp-controller="InfoArticles" asp-action="delete" asp-route-id="@Model.CurrentArticle.Id">
                <i class="fas fa-trash-alt me-2 "></i>Удалить
            </a>

        </div>
        <div class="card-footer">
            <a class="btn btn-dark btn-rounded shadow-1-strong mb-0" asp-action="addoredit" asp-controller="InfoArticles" asp-route-id="-1" asp-route-needEdit="@false">
                <i class="fas fa-plus me-2"></i>Добавить новый
            </a>
        </div>
    </div>
}